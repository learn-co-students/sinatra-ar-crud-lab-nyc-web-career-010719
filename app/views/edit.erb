<form action="/articles/<%= @article.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
    <p>Article Title: <input type="text" id="title" name="article[title]" value="<%= @article.title %>"/></p>
    <p>Article Content: <input type="text" id="content" name="article[content]" value="<%= @article.content %>"/></p>
  <input type="submit" name="Submit"/>
</form>
