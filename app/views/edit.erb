<h1>Edit an Article</h1>

<form action="/articles/<%= @article.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <p>Title: <input id="title" type="text" name="article[title]" value= <%= @article.title %> ></p>
  <p>Content: <input id="content" type="text" name="article[content]" value= <%= @article.content %> ></p>
  <p><input type="submit"></p>
</form>
